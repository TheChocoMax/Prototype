---
const { product_id } = Astro.props;
const { product_name } = Astro.props;
---

<Fragment>
    <div class="product-card">
        <h1>Product #{product_id}</h1>
        <h2>{product_name}</h2>
    </div>
</Fragment>

<style>
    .product-card {
        border: 1px solid #ccc;
        padding: 16px;
        margin: 16px;
        border-radius: 8px;
        background-color: #f9f9f9;
    }
</style>
