---
import '../styles/global.css';
import Icon from "../components/Icon.astro";
import SearchBar from "../components/SearchBar.astro";

const { title } = Astro.props;
---

<header>
    <h1>{title}</h1>
    <SearchBar placeholder="Search for products..." />
    <nav>
        <ul>
            <li><a href="index.html"><Icon icon="home" /></a></li>
            <li><a href="cart.html"><Icon icon="shopping-cart"></a></li>
            <li><a href="about.html"><Icon icon="info" /></a></li>
            <li><a href="contact.html"><Icon icon="mail" /></a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        width: 100%;
    }

    ul {
        display: flex;
        gap: var(--spacing-medium);
        list-style: none;
    }

    header>*:first-child,
    header>*:last-child {
        margin: 0 var(--spacing-medium);
    }

    @media screen and (width<=850px) {
        header {
            align-items: center;
            flex-direction: column;
            gap: 0;
        }

        header>*:first-child,
        header>*:last-child {
            margin: 0;
        }
    }
</style>
